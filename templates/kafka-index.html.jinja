<!DOCTYPE html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>KIP Status</title>
</head>

<body>
    <div class="container text-center">
        <div class="row">
            <div class="col">
                <h1>Kafka Improvement Proposals: Enriched</h1>
                <p><a href="index.html">Back to IPper</a></p>
                <p>GitHub Repository: <a href="https://github.com/tomncooper/kipper">tomncooper/kipper</a></p>
                <p>Last Updated: {{ date }}</p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h2>Status Key</h2>
                <table>
                    <tr>
                        <th>Status</th>
                        <th>Mentioned within the last N days</th>
                    </tr>
                    {% for status in kip_status_enum %}
                    <tr>
                        <td style="background-color:{{ status.text }};"></td>
                        <td>{{ status.duration.days }}</td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
        <div>
        <div class="row">
            <div class="col">
                <h2>KIPs Under Discussion</h2>
                <table class="table table-hover">
                    <tr>
                        <th>KIP</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>+1</th>
                        <th>0</th>
                        <th>-1</th>
                        <th>Created by</th>
                        <th>Age</th>
                    </tr>
                    {% for kip in kip_status %}
                    <tr>
                        <td><a href={{ kip['url'] }}>{{ kip['id'] }}</a></td>
                        <td>{{ kip['text'] }}
                        <td style="background-color:{{ kip['status'].text }};"></td>
                        {% if kip["+1"] %}
                        <td style="background-color:green;">
                            <a href="#" data-bs-toggle="tooltip" data-bs-html=true 
                            data-bs-title="
                            {% for name in kip["+1"] %}
                            {{ name|replace("<", "(")|replace(">",")") }}<br>
                            {% endfor %}">{{ kip["+1"]|length }}</a>
                        </td>
                        {% else %}
                        <td>{{ kip["+1"]|length }}</td>
                        {% endif %}
                        {% if kip["0"] %}
                        <td style="background-color:yellow;">
                            <a href="#" data-bs-toggle="tooltip" data-bs-html=true 
                            data-bs-title="
                            {% for name in kip["0"] %}
                            {{ name|replace("<", "(")|replace(">",")") }}<br>
                            {% endfor %}">{{ kip["0"]|length }}</a>
                        </td>
                        {% else %}
                        <td>{{ kip["0"]|length }}</td>
                        {% endif %}
                        {% if kip["-1"] %}
                        <td style="background-color:red;">
                            <a href="#" data-bs-toggle="tooltip" data-bs-html=true 
                            data-bs-title="
                            {% for name in kip["-1"] %}
                            {{ name|replace("<", "(")|replace(">",")") }}<br>
                            {% endfor %}">{{ kip["-1"]|length }}</a>
                        </td>
                        {% else %}
                        <td>{{ kip["-1"]|length }}</td>
                        {% endif %}
                        <td>{{ kip["created_by"] }}</td>
                        <td>{{ kip["age"] }}</td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
    </script>
</body>

</html>